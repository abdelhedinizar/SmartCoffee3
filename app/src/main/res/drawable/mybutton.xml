<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <gradient android:angle="-90" android:startColor="#1A237E" android:endColor="#3949AB"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <solid android:color="#303F9F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#283593" />
            <gradient android:angle="-90" android:startColor="#3F51B5" android:endColor="#303F9F" />
        </shape>
    </item>

</selector>